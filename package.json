{
  "name": "blog-node",
  "author": {
    "name": "daixu",
    "email": "daixu.cn@outlook.com",
    "url": "https://daixu.cn/"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "start": "nodemon",
    "pm2": "pm2 startOrRestart pm2.config.js --env production",
    "deploy-setup": "pm2 deploy pm2.config.js production setup",
    "deploy": "pm2 deploy pm2.config.js production --force",
    "prettier": "prettier --write .",
    "lint": "lint-staged",
    "husky-install": "husky install && npx husky add .husky/commit-msg 'npm run lint && npx --no-install commitlint --edit $1'",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{ts,js,json,css,scss,md,vue}": "prettier --write .",
    "*.{ts,js,vue}": [
      "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "extension": [
    ".ts"
  ],
  "_moduleAliases": {
    "@": "src"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "axios": "^1.6.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "figlet": "^1.7.0",
    "file-type": "^16.5.3",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.2.0",
    "geoip-lite": "^1.4.9",
    "got": "^11.8.6",
    "handlebars": "^4.7.8",
    "image-size": "^1.1.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.0",
    "koa-body": "^6.0.1",
    "koa-combine-routers": "^4.0.2",
    "koa-compose": "^4.1.0",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^7.0.2",
    "koa-router": "^12.0.1",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "koa2-ratelimit": "^1.1.3",
    "koa2-swagger-ui": "^5.10.0",
    "log4js": "^6.9.1",
    "md5": "^2.3.0",
    "module-alias": "^2.2.3",
    "mysql2": "^2.3.3",
    "node-schedule": "^2.1.1",
    "node-xlsx": "^0.23.0",
    "nodemailer": "^6.9.8",
    "pm2": "^5.3.0",
    "request-ip": "^3.3.0",
    "sequelize": "^6.35.2",
    "sharp": "^0.32.6",
    "sitemap": "^7.1.1",
    "swagger-jsdoc": "^6.2.8",
    "systeminformation": "^5.21.22",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/figlet": "^1.5.8",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/fs-extra": "^11.0.4",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/koa": "^2.13.12",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-router": "^7.4.8",
    "@types/koa-static": "^4.0.4",
    "@types/koa2-cors": "^2.0.5",
    "@types/koa2-ratelimit": "^0.9.6",
    "@types/md5": "^2.3.5",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.7",
    "@types/node-schedule": "^2.1.5",
    "@types/nodemailer": "^6.4.14",
    "@types/request-ip": "0.0.41",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/url-parse": "^1.4.11",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
