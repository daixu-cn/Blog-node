{
  "name": "blog-node",
  "author": {
    "name": "daixu",
    "email": "daixu.cn@outlook.com",
    "url": "https://daixu.cn/"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "start": "nodemon",
    "pm2": "pm2 startOrRestart pm2.config.js --env production",
    "deploy-setup": "pm2 deploy pm2.config.js production setup",
    "deploy": "pm2 deploy pm2.config.js production --force",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --write .",
    "lint": "lint-staged",
    "husky-install": "husky install && npx husky add .husky/commit-msg 'npm run lint && npx --no-install commitlint --edit $1'",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{ts,js,json,css,scss,md,vue}": "prettier --write .",
    "*.{ts,js,vue}": [
      "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "extension": [
    ".ts"
  ],
  "_moduleAliases": {
    "@": "src"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "ali-oss": "^6.22.0",
    "axios": "^1.8.4",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "figlet": "^1.8.1",
    "file-type": "^20.4.1",
    "formidable": "^3.5.2",
    "fs-extra": "^11.3.0",
    "geoip-lite": "^1.4.10",
    "got": "^14.4.7",
    "handlebars": "^4.7.8",
    "image-size": "^2.0.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.16.1",
    "koa-body": "^6.0.1",
    "koa-combine-routers": "^4.0.2",
    "koa-compose": "^4.1.0",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^8.0.1",
    "koa-router": "^13.0.1",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "koa2-ratelimit": "^1.1.3",
    "koa2-swagger-ui": "^5.11.0",
    "log4js": "^6.9.1",
    "md5": "^2.3.0",
    "module-alias": "^2.2.3",
    "mysql2": "^3.14.0",
    "node-schedule": "^2.1.1",
    "node-xlsx": "^0.24.0",
    "nodemailer": "^6.10.1",
    "pm2": "^6.0.5",
    "request-ip": "^3.3.0",
    "sequelize": "^6.37.7",
    "sitemap": "^8.0.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "systeminformation": "^5.25.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/ali-oss": "^6.16.11",
    "@types/figlet": "^1.7.0",
    "@types/formidable": "^3.4.5",
    "@types/fs-extra": "^11.0.4",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-router": "^7.4.8",
    "@types/koa-static": "^4.0.4",
    "@types/koa2-cors": "^2.0.5",
    "@types/koa2-ratelimit": "^0.9.6",
    "@types/md5": "^2.3.5",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.14.1",
    "@types/node-schedule": "^2.1.7",
    "@types/nodemailer": "^6.4.17",
    "@types/request-ip": "0.0.41",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.4.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
